<script>
  const toTopBtn = document.getElementById("to-top-btn");

  function toggleToTopButton() {
    if (window.scrollY > window.innerHeight / 2) {
      //@ts-ignore
      toTopBtn.setAttribute("data-show", "true");
    } else {
      //@ts-ignore
      toTopBtn.setAttribute("data-show", "false");
    }
  }

  function scrollToTop() {
    window.scrollTo({ top: 0, behavior: "smooth" });
  }

  window.addEventListener("scroll", toggleToTopButton);

  //@ts-ignore
  toTopBtn.addEventListener("click", scrollToTop);
</script>

<button
  id="to-top-btn"
  class="z-90 fixed bottom-8 end-4 flex h-10 w-10 translate-y-28
        items-center justify-center rounded-full border-2 border-transparent
        bg-zinc-200 text-3xl opacity-0 transition-all duration-300
        hover:border-zinc-400 data-[show=true]:translate-y-0
        data-[show=true]:opacity-100 dark:bg-zinc-700 sm:end-8 sm:h-12 sm:w-12"
  aria-label="Back to Top"
  data-show="false"
  ><svg
    xmlns="http://www.w3.org/2000/svg"
    aria-hidden="true"
    focusable="false"
    fill="none"
    viewBox="0 0 24 24"
    stroke-width="2"
    stroke="currentColor"
    class="h-6 w-6"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      d="M4.5 15.75l7.5-7.5 7.5 7.5"></path>
  </svg>
</button>
