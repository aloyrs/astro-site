---
import HomePostPreview from "../components/HomePostPreview.astro";
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";
const maxPost = 3;
const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<Layout>
  <div class="space-y-10">
    <div class="flex flex-col items-start">
      <p
        class="hello-world title text-3xl sm:text-5xl tracking-widest font-bold"
      >
        Hello World!<span>&nbsp;</span>
      </p>
    </div>

    <p>
      Welcome to my website, I am Aloysius!<br /> I post blogs about Computer Science
      / Software Engineering related topics.
    </p>

    <section aria-label="Blog post list">
      <div class="flex items-center mb-4 space-x-4">
        <h1>Posts</h1>
        <a href="/blog" class="text-xs text-gray-500 pt-1"> â†’ View all posts</a>
      </div>

      <ul class="space-y-4 sm:space-y-2 mb-4">
        {
          posts.slice(0, maxPost).map((post) => (
            <li class="flex flex-col gap-x-2 sm:flex-row">
              <HomePostPreview post={post} />
            </li>
          ))
        }
      </ul>
    </section>
  </div>
</Layout>
<style>
  .hello-world {
    position: relative;
    float: left;
  }
  .hello-world span {
    position: absolute;
    top: 0;
    right: 0;
    background: rgb(29, 33, 44);
    width: 100%;
    border-left: 0.1em solid transparent;
    -webkit-animation:
      typing 2.5s steps(12) forwards,
      cursor 2s infinite;
    animation:
      typing 2.5s steps(12) forwards,
      cursor 2s infinite;
  }
  /* Animation */
  @-webkit-keyframes typing {
    from {
      width: 100%;
    }
    to {
      width: 0;
    }
  }
  @-webkit-keyframes cursor {
    50% {
      border-color: white;
    }
  }
  @keyframes typing {
    from {
      width: 100%;
    }
    to {
      width: 0;
    }
  }
  @keyframes cursor {
    100% {
      border-color: white;
    }
  }
</style>
